<%= form_tag({:controller => "estadisticas", :action => "estas"}, :method => "post") do %>	<table>		<tr>			<td><%= label_tag "fechaIni", "Fecha de Inicio: " %></td>			<td><%= date_field :fechain, params[:fechain] %></td>		</tr>		<tr>			<td><%= label_tag "fechafin", "Fecha de Cierre: " %></td>			<td><%= date_field :fechafin, params[:fechafin] %></td>		</tr>		<tr>			<td><%= radio_button_tag(:opcion, "producto") %>			<%= label_tag(:opcion_pro, "Ver Productos Vendidos") %></td>		</tr>		<tr>			<td><%= radio_button_tag(:opcion, "usuario") %>			<%= label_tag(:opcion_usu, "Ver Usuarios Regisrados") %></td>		</tr>	</table><div class="actions"><%= submit_tag "Confirmar", class: 'btn btn-default'%></div>  <%end%>