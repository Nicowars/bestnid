
<div class="navbar navbar-default" role="navigation">
 	<div class="container-fluid">
		<div class="navbar-header">

		<span class="navbar-brand">Productos</span>

		<form class="navbar-form navbar-left" role="search">
		<%= form_tag productos_path, :method => 'get' do %>
		<%= text_field_tag :search, params[:search] %>
		<span>Ordenar por:</span>
		<%= select_tag :orden, options_for_select(['Mas recientes', 'Mas antiguos', 'Por vencer', 'Alfabetico']) %>
		<span>Mostrar productos vencidos</span>
		<%= check_box_tag :mostrar_v %>
		<%= submit_tag "Buscar", :descripcion => nil, class:"btn btn-default" %>
		<% end %>
		
			
		
        </form>

		</div>
    </div>
 </div>

<% if @productos.size > 0 %>

	<ul>
		<%= render @productos %>
	</ul>		
<% else %>
	<p>No hay productos</p>
<% end %>

